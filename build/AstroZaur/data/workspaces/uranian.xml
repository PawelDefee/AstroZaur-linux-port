<?xml version="1.0"?>
<astrozaur>
    <window title="Natal">
	<chart type="natal">
	    <info>Natal</info>
	    <id>natal</id>
	    <date>Now</date>
	    <time>Now</time>
	    <rotate_sec>60</rotate_sec>
	    <file>data/points/uranian.xml</file>
	</chart>

	<lua>
	    <load>data/lua/test.lua</load>
	    <chunk when="INFO">window(...)</chunk>
	</lua>

	<file>data/aspects/uranian.xml</file>
	<active_chart name="id:natal"/>
	<aspect_chart name="id:natal"/>
    </window>

    <window title="Transit">
	<chart type="natal">
	    <info>Transit</info>
	    <id>date</id>
	    <date>Now</date>
	    <time>Now</time>
	    <rotate_sec>60</rotate_sec>
	    <file>data/points/uranian.xml</file>
	</chart>

	<lua>
	    <load>data/lua/test.lua</load>
	    <chunk when="INFO">window(...)</chunk>
	</lua>

	<file>data/aspects/uranian.xml</file>
	<aspects>
	    <eqliptic>
		<orbises>
		    prognos
		</orbises>
	    </eqliptic>
	</aspects>

	<show_chart name="id:natal"/>
	<active_chart name="id:natal"/>
	<aspect_chart name="id:date"/>
	<active_chart name="id:date"/>
    </window>

    <window title="Direction">
	<chart type="arc direct">
	    <info>Direction</info>
	    <id>direct</id>
	    <k1>1</k1>
	    <k2>1</k2>
	    <point>Sun</point>
	    <date clone="id:date"/>
	    <parent_chart clone="id:natal"/>
	    <file>data/points/uranian.xml</file>
	</chart>
	
	<file>data/aspects/uranian.xml</file>
	<aspects>
	    <eqliptic>
		<orbises>
		    prognos
		</orbises>
	    </eqliptic>
	</aspects>

	<lua>
	    <load>data/lua/test.lua</load>
	    <chunk when="INFO">window(...)</chunk>
	</lua>

	<show_chart name="id:natal"/>
	<active_chart name="id:natal"/>
	<aspect_chart name="id:direct"/>
	<active_chart name="id:direct"/>
    </window>

    <window title="solar">
	<chart type="revolution">
	    <info>Solar</info>
	    <date clone="id:date"/>
	    <place clone="id:date"/>
	    
	    <point name="Sun" chart="id:natal"/>
	    <backward/>
	    
	    <rotate_sec>86400</rotate_sec>
	    <file>data/points/uranian.xml</file>
	</chart>

	<file>data/aspects/uranian.xml</file>

	<lua>
	    <load>data/lua/test.lua</load>
	    <chunk when="INFO">window(...)</chunk>
	</lua>

	<active_chart name="Solar"/>
	<aspect_chart name="Solar"/>
    </window>
</astrozaur>

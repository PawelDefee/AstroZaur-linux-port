<?xml version="1.0"?>
<astrozaur>
    <points>
	<point name="Vx" type="axis">
	    <id>3</id>
	    <color>#0000B0</color>
	    <bitmap>data/pixmaps/vx.gif</bitmap>
	    <category>axis</category>
	    <line_width>3</line_width>
	</point>
	<point name="AVx" type="lua">
	    <lua>
		<chunk when="CALC">
		    local self, chart = ...
		    local point = chart.point.Vx
		    return point.lon + 180, point.lat, point.speed
		</chunk>
	    </lua>
	    <persist/>
	    <color>#0000B0</color>
	    <info>true</info>
	    <category>axis</category>
	    <line_width>2</line_width>
	</point>
    </points>
</astrozaur>

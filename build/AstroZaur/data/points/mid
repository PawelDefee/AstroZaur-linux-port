#!/usr/local/bin/lua

name = {"Sun", "Moon", "Mercury", "Venus", "Mars", "Jupiter", "Saturn", "Uranus", "Neptune", 
	"Pluto", "NNode", "Cupido", "Hades", "Zeus", "Kronos", "Apollon", "Adametos", "Vulkanus",
	"Poseidon", "Asc", "Mc", "Ar"}
	
short = {"SU", "MO", "ME", "VE", "MA", "JU", "SA", "UR", "NE",
	 "PL", "NN", "CU", "HA", "ZE", "KR", "AP", "AD", "VU",
	 "PO", "AS", "MC", "AR"}
	
color = {"#FF5000", "#008000", "#00A0A0", "#00B000", "#FF0000", "#0000FF", "#000000", "#0080FF", "#0000C0",
	 "#C00000", "#808080", "#000000", "#000000", "#000000", "#000000", "#000000", "#000000", "#000000",
	 "#000000", "#00B000", "#B00000", "#000000"}

format="\t<point name=\"%s/%s\" type=\"midpoint\">\n\t\t<point>%s</point>\n\t\t<point>%s</point>\n\t\t<color>%s</color>\n\t\t<line><style>solid</style><color>#FF00FF</color></line>\n\t\t<category>midpoint</category>\n\t</point>\n"

for a=1,22 do
    for b=a+1,22 do
	print(string.format(format,short[a],short[b],name[a],name[b],color[a]))
    end
end
